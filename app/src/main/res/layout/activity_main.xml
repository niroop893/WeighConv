<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter value"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/buttonKgToPound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert KG to Pounds" />

        <Button
            android:id="@+id/buttonPoundToKg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert Pounds to KG" />

        <Button
            android:id="@+id/buttonMilesToKm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert Miles to KM" />

        <Button
            android:id="@+id/buttonFeetToMeters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert Feet to Meters" />

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result: "
            android:textSize="18sp"
            android:paddingTop="10dp" />
    </LinearLayout>

    <!-- Navigation View (Requires app namespace) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/activity_main_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>