<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter value"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp" />

    <Button
        android:id="@+id/buttonConvertMeterToKm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convert Meter to Kilometer"
        app:layout_constraintTop_toBottomOf="@id/editTextValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonConvertPoundToKg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convert Pound to Kilogram"
        app:layout_constraintTop_toBottomOf="@id/buttonConvertMeterToKm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonConvertFeetToFoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convert Feet to Foot"
        app:layout_constraintTop_toBottomOf="@id/buttonConvertPoundToKg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonConvertYardToSqFoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convert Yard to Square Foot"
        app:layout_constraintTop_toBottomOf="@id/buttonConvertFeetToFoot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result: "
        app:layout_constraintTop_toBottomOf="@id/buttonConvertYardToSqFoot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
